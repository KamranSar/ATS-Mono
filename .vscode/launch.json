{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Edge",
      "port": 9222,
      "request": "attach",
      "type": "pwa-msedge",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Launch Edge",
      "request": "launch",
      "type": "pwa-msedge",
      "url": "http://localhost:8080/app",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Attach to Chrome",
      "port": 9222,
      "request": "attach",
      "type": "pwa-chrome",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Launch Chrome against localhost:8080",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:8080/app",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Launch Incognito Chrome against localhost:8080",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:8080",
      "runtimeArgs": ["--incognito"],
      "webRoot": "${workspaceFolder}",
      "browserLaunchLocation": null
    },
    {
      "name": "npm run serve",
      "request": "launch",
      "runtimeArgs": ["run-script", "serve"],
      "runtimeExecutable": "npm",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node"
    },
    {
      "name": "npm run build",
      "request": "launch",
      "runtimeArgs": ["run-script", "build"],
      "runtimeExecutable": "npm",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node"
    },
    {
      "name": "npm run prod",
      "request": "launch",
      "runtimeArgs": ["run-script", "prod"],
      "runtimeExecutable": "npm",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node"
    }
  ]
}
